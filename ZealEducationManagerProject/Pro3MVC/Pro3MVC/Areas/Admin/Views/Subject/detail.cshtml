@model IEnumerable<Pro3MVC.Entities.AccountSubjectEntity>
@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}
<div class="col-sm-12 col-md-12 col-lg-8 col-xl-12 tm-block-col">
	<div class="tm-bg-primary-dark tm-block tm-block-products">
		<div class="tm-product-table-container">
			<table class="table table-hover tm-table-small tm-product-table">
				<thead>

					<tr>
						<th scope="col" style="display:none">Subject Id</th>
						<th scope="col"  style="display:none">ID</th>
						<th scope="col">Student Name</th>
						<th scope="col">Score</th>
						<th scope="col">&nbsp;</th>
					</tr>
				</thead>
				<tbody>

					@foreach (var item in Model)
					{
						<tr>
							<td  style="display:none">
								@Html.DisplayFor(modelItem => item.subId)
							</td>
							<td style="display:none">
								@Html.DisplayFor(modelItem => item.Id)
							</td>
							
							<td>
								@Html.DisplayFor(modelItem => item.fullname)
							</td>
							<td>@Html.DisplayFor(modelItem => item.Score)</td>
							<td>
								<a asp-area="admin" asp-controller="subject" asp-action="updateD" asp-route-id="@item.Id"
							   class="btn btn-primary btn-block text-uppercase mb-3" style="width:150px!important;height:50px!important;">Update Score</a>
							</td>

						</tr>
					}
				</tbody>
			</table>
		</div>
		<!-- table container -->
		@*<a asp-area="admin" asp-controller="subject" asp-action="add"
		class="btn btn-primary btn-block text-uppercase mb-3">Add new subject</a>
		<button class="btn btn-primary btn-block text-uppercase">
		Delete selected subject
		</button>*@
	</div>
</div>



<script>
	$(function() {
		$(".tm-product-name").on("click", function() {
			window.location.href = "edit-product.html";
		});
	});
</script>

