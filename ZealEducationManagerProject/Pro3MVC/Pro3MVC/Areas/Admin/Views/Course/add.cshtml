@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

@using Pro3MVC.Entities;
@model CourseEntity;

<div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
	<div class="tm-bg-primary-dark tm-block tm-block-h-auto">
		<div class="row">
			<div class="col-12">
				<h2 class="tm-block-title d-inline-block">Add Course</h2>
			</div>
		</div>
		<div class="row tm-edit-product-row">
			<div class="col-xl-6 col-lg-6 col-md-12">
				<form asp-area="admin" asp-controller="course" asp-action="add" method="post" class="tm-edit-product-form">
					<p style="color: darkred">@TempData["exists"]</p>
					<p style="color: darkred">@TempData["valid"]</p>
					<div class="form-group mb-3">
						<label>
							Course Name
						</label>
						<input asp-for="Name"
							   type="text"
							   class="form-control validate">
					</div>
					<div class="form-group mb-3">
						<label for="name">
							Fee
						</label>
						<input asp-for="Fee"
							   type="number"
							   class="form-control validate"
							   required />
					</div>
					<div class="form-group mb-3">
						<label>
							Start Date
						</label>
						<input asp-for="startDate"
							   type="text" id="startDate" name="startDate" placeholder="dd/MM/yyyy"
							   class="form-control validate">
					</div>
					<div class="form-group mb-3">
						<label>
							End Date
						</label>
						<input asp-for="endDate"
							   type="text" id="endDate" name="endDate" placeholder="dd/MM/yyyy"
							   class="form-control validate">
					</div>
					<div class="col-12">
						<button type="submit" class="btn btn-primary btn-block text-uppercase">Add Course</button>
					</div>
				</form>

			</div>

		</div>
	</div>
</div>


<script>
	$(function() {
		$("#expire_date").datepicker();
	});
</script>



